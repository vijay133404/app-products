<p id="notice"><%= notice %></p>
<div class="container">
   <div class ="row">
      <div class="col-md-2">
         <h3>Logo</h3>
      </div>
      <div class="col-md-10">
         <p>
            <strong>Supplier name:</strong>
            <%= @supplier.supplier_name %>
         </p>
      </div>
   </div>
   <h3> <strong>Products</strong></h3>
   <div style="float: right;">
        <label><input type='checkbox' onclick='handleClick(this);' data-remote="true">show inactive products</label>

   </div>
   
                                  
<script type="text/javascript">
	function handleClick(cb) {
		if(cb.checked) {
		     $.ajax({
		      url: '/suppliers/active_product',
		      type: 'GET',
		      data: {"inactive": cb.checked ,Id: <%=@supplier.id%> }
		    });
		  }else{
		     $.ajax({
		      url: '/suppliers/active_product',
		      type: 'GET',
		      data: {"active": cb.checked ,Id: <%=@supplier.id%> }
		    });
		  }
}
</script>

   <div class="row" id="products_listing">
      <%= render "product_listing" ,products: @supplier.active_product %>
   </div>
</div>
<%= link_to 'Back', suppliers_path %>
